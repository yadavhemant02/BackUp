<script>
    var bb = '<%=name%>';
    
    if(!bb){
        window.location.assign('http://localhost:4300/teacherlogin');
    }
    
  
  </script>
<html>
    <head>
        
           <!-- Latest compiled and minified CSS -->
           <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

           <!-- jQuery library -->
           <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
   
           <!-- Latest compiled JavaScript -->
           <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
           
           <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
     
   <style>
    .ss{
        margin: 2vmin;
    }
   </style>
    </head>
    <body>
        <div class="fluid">
            <div class="row" style="height: 60px; background-color: rgb(187, 247, 213);">
              <span style="text-align: center; font-size: 30px;">ResultManegementSystem</span>
            </div>
          </div>
          <div style="margin-left: 10vmin; margin-top: 3vmin;">
            <a href="/allstudentdata" style="font-size: 20px;">Back</a>
          </div>
        </div>
        <div style="margin-top: 2vmin;  margin-bottom: 5vmin;">
          <h1 style="text-align: center; margin-right: 80vmin;">Update your result</h1>
        </div>
          <div class="container" style="width: 60%;">
            <% mascots.forEach(function(mascot) { %>
            <form action="/update/<%=mascot.id%>/data" method="POST">
            <div class="row ss" >
                <div class="col-md-4">
                    <h2 style="font-size: 25px; text-align: center;"> Name:</h2>   
                </div>
                <div class="col-md-8">
                    <input type="text"style="font-size:20px; width:100%" name="name" value="<%=mascot.name%>" class="form-control"  placeholder="enter your name">
                </div>
            </div>
            <div class="row ss">
                <div class="col-md-4">
                    <h2 style="font-size: 25px; text-align: center;"> Roll.No :</h2>    
                </div>
                <div class="col-md-8">
                    <input type="text"style="font-size:20px; width:100%" value="<%=mascot.rollno%>" name="rollno" class="form-control"  placeholder="enter your rollno">
                </div>
            </div>
            <div class="row ss">
                <div class="col-md-4">
                    <h2 style="font-size: 25px; text-align: center;"> DateofBirth :</h2>    
                </div>
                <div class="col-md-8">
                    <input type="text"style="font-size:20px; width:100%" name="date" value="<%=mascot.Dateofbirth%>" class="form-control"  placeholder="enter your date">
                </div>
            </div>
            <div class="row ss">
                <div class="col-md-4">
                    <h2 style="font-size: 25px; text-align: center;"> Score :</h2>   
                </div>
                
                <div class="col-md-8">
                    <input type="text"style="font-size:20px; width:100%" value="<%=mascot.score%>" name="score" class="form-control"  placeholder="enter your score">
                </div>
            </div>
            <div style="text-align: center; margin-top: 7vmin; margin-right: 30vmin;">
                
                <button type="submit" onclick="teacher()" class="btn btn-primary" style="width: 100px; font-size: 13px; margin-right:3vmin ;">Edit</button>
                <button type="clear" onclick="student()" class="btn btn-primary" style="width: 100px; font-size: 13px;"> clear</button>
            </div>
            </form>
            <% }); %>
          </div>
        
          <h1 style="margin-top: 5vmin; margin-left: 10vmin;"> <%=name%>
            <a href="/logout"><button style="font-size: 15px;" class="btn btn-primary">logout</button></a></h1>
    </body>
</html>